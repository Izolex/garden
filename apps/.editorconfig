root = true

[*]
end_of_line = lf
charset = utf-8

[{*.go, *.html, Makefile}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[{*.yml, *.yaml, *.json, *.js, *.ts, *.tsx, *.sql}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
